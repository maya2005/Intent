<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picke_date_calender"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/tvPickDate"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePickerCalender"
        android:layout_below="@+id/tvPickDate"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אישור"
        android:id="@+id/btnSetDateCalnder"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/datePickerCalender"
        android:layout_alignEnd="@+id/datePickerCalender" />
</RelativeLayout>